{
	"name": "mayacode",
	"displayName": "MayaCode",
	"description": "A Visual Studio Code extension with support for coding for Maya.",
	"version": "1.3.0",
	"publisher": "saviof",
	"author": {
		"name": "Savio Fernandes"
	},
	"license": "MIT",
	"homepage": "https://github.com/artbycrunk/vscode-maya",
	"repository": {
		"type": "git",
		"url": "https://github.com/artbycrunk/vscode-maya"
	},
	"bugs": {
		"url": "https://github.com/artbycrunk/vscode-maya/issues"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.5.0"
	},
	"keywords": [
		"maya",
		"mel",
		"python",
		"autodesk maya"
	],
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:mel",
		"onLanguage:python",
		"onCommand:mayacode.sendPythonToMaya",
		"onCommand:mayacode.sendMelToMaya"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^6.0.42",
		"@types/vscode": "^1.40.0",
		"tslint": "^5.11.0",
		"typescript": "^2.1.6",
		"vscode": "^1.1.17"
	},
	"dependencies": {
		"vscode-extension-telemetry": "^0.1.3"
	},
	"contributes": {
		"languages": [
			{
				"id": "mel",
				"aliases": [
					"Maya MEL",
					"MEL",
					"Mel",
					"mel"
				],
				"extensions": [
					".mel",
					".ma"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "mel",
				"scopeName": "source.mel",
				"path": "./syntaxes/mel.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "mel",
				"path": "./snippets/mel.json"
			}
		],
		"commands": [
			{
				"command": "mayacode.sendPythonToMaya",
				"title": "Send Python Code to Maya",
				"category": "Maya"
			},
			{
				"command": "mayacode.sendMelToMaya",
				"title": "Send MEL Code to Maya",
				"category": "Maya"
			}
		],
		"configuration": {
			"type": "object",
			"title": "MayaCode",
			"properties": {
				"mayacode.mel.port": {
					"type": "integer",
					"default": 7001,
					"description": "The port over which to send mel commands."
				},
				"mayacode.python.port": {
					"type": "integer",
					"default": 5678,
					"description": "The port over which to debug python files (uses ptvsd module)"
				},
				"mayacode.hostname": {
					"type": "string",
					"default": "localhost",
					"description": "The hostname of the machine which has a maya instance running."
				},
				"mayacode.telemetry": {
					"type": "boolean",
					"default": true
				}
			}
		},
		"keybindings": [
			{
				"command": "mayacode.sendPythonToMaya",
				"key": "alt+shift+m",
				"mac": "ctrl+shift+m",
				"when": "editorTextFocus && editorLangId == 'python'"
			},
			{
				"command": "mayacode.sendMelToMaya",
				"key": "alt+shift+m",
				"mac": "ctrl+shift+m",
				"when": "editorTextFocus && editorLangId == 'mel'"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "mayacode.sendPythonToMaya",
					"when": "editorTextFocus && editorLangId == 'python'",
					"group": "navigation"
				},
				{
					"command": "mayacode.sendMelToMaya",
					"when": "editorTextFocus && editorLangId == 'mel'",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "mayacode.sendPythonToMaya",
					"group": "mayacode"
				},
				{
					"command": "mayacode.sendMelToMaya",
					"group": "mayacode"
				}
			]
		}
	}
}